# Copy this file to `.env.development.local` for local development.
# Use `.env.production` (see .env.production.example) for production deployments.
DATABASE_URL="postgresql://<user>:<password>@<neon_host>/<database>?sslmode=require"
PORT=4000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173
JWT_SECRET="replace-with-a-strong-secret"
BCRYPT_SALT_ROUNDS=10
GITHUB_CLIENT_ID="replace-with-github-client-id"
GITHUB_CLIENT_SECRET="replace-with-github-client-secret"
GITHUB_REDIRECT_URI="http://localhost:5173/en/auth/github/callback"
RATE_LIMIT_GLOBAL_MAX=300
RATE_LIMIT_AUTH_MAX=50
